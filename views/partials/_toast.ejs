<!-- Toast Container -->
<div class="toast-container position-fixed top-0 end-0 p-4">
    <div
        class="toast align-items-center text-bg-danger border-0 fs-6"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
    >
        <div class="d-flex">
            <div class="toast-body p-3">
                <i class="bi bi-exclamation-circle me-2"></i>
                <span class="toast-message"></span>
            </div>
            <button
                type="button"
                class="btn-close btn-close-white me-3 m-auto"
                data-bs-dismiss="toast"
                aria-label="Close"
            ></button>
        </div>
    </div>
</div>

<!-- Success Toast -->
<div class="toast-container position-fixed top-0 end-0 p-4">
    <div
        class="toast align-items-center text-bg-success border-0"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
    >
        <div class="d-flex">
            <div class="toast-body">
                <i class="bi bi-check-circle me-2"></i>
                <span class="toast-message"></span>
            </div>
            <button
                type="button"
                class="btn-close btn-close-white me-2 m-auto"
                data-bs-dismiss="toast"
            ></button>
        </div>
    </div>
</div>

<script>
    const errorToastElement = document.querySelector('.toast.text-bg-danger');
    const successToastElement = document.querySelector('.toast.text-bg-success');

    const showError = (message) => {
        const errorToast = new bootstrap.Toast(errorToastElement);
        const toastMessageElement = errorToastElement.querySelector('.toast-message');
        toastMessageElement.textContent = message;
        errorToast.show();
    };

    const showSuccess = (message) => {
        const successToast = new bootstrap.Toast(successToastElement, {
            animation: true,
            autohide: true,
            delay: 3000,
        });
        const toastMessageElement = successToastElement.querySelector('.toast-message');
        toastMessageElement.textContent = message;
        successToast.show();
    };

    const showAuthPrompt = () => {
        const authPrompt = document.createElement('div');
        authPrompt.classList.add('toast-container', 'position-fixed', 'top-50', 'start-50', 'translate-middle', 'p-4');
        authPrompt.innerHTML = `
            <div class="toast align-items-center text-bg-info border-0" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body p-3">
                        <i class="bi bi-info-circle me-2 text-primary"></i>
                        <span>You must be logged in to perform this action.</span>
                    </div>
                    <div class="d-flex align-items-center me-3">
                        <a href="/login" class="btn btn-sm btn-outline-light me-2">Login</a>
                        <a href="/register" class="btn btn-sm btn-light">Sign Up</a>
                    </div>
                    <button type="button" class="btn-close btn-close-white m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        `;
        document.body.appendChild(authPrompt);
        const toast = new bootstrap.Toast(authPrompt.querySelector('.toast'), {
            autohide: false
        });
        toast.show();
    }
</script>
