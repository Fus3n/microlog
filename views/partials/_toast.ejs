<!-- Toast Container -->
<div class="toast-container position-fixed top-0 end-0 p-4">
    <div
        class="toast align-items-center text-bg-danger border-0 fs-6"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
    >
        <div class="d-flex">
            <div class="toast-body p-3">
                <i class="bi bi-exclamation-circle me-2"></i>
                <span class="toast-message"></span>
            </div>
            <button
                type="button"
                class="btn-close btn-close-white me-3 m-auto"
                data-bs-dismiss="toast"
                aria-label="Close"
            ></button>
        </div>
    </div>
</div>

<!-- Success Toast -->
<div class="toast-container position-fixed top-0 end-0 p-4">
    <div
        class="toast align-items-center text-bg-success border-0"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
    >
        <div class="d-flex">
            <div class="toast-body">
                <i class="bi bi-check-circle me-2"></i>
                <span class="toast-message"></span>
            </div>
            <button
                type="button"
                class="btn-close btn-close-white me-2 m-auto"
                data-bs-dismiss="toast"
            ></button>
        </div>
    </div>
</div>

<script>
    const errorToastElement = document.querySelector('.toast.text-bg-danger');
    const successToastElement = document.querySelector('.toast.text-bg-success');

    const showError = (message) => {
        const errorToast = new bootstrap.Toast(errorToastElement);
        const toastMessageElement = errorToastElement.querySelector('.toast-message');
        toastMessageElement.textContent = message;
        errorToast.show();
    };

    const showSuccess = (message) => {
        const successToast = new bootstrap.Toast(successToastElement, {
            animation: true,
            autohide: true,
            delay: 3000,
        });
        const toastMessageElement = successToastElement.querySelector('.toast-message');
        toastMessageElement.textContent = message;
        successToast.show();
    };

    const showAuthPrompt = () => {
        const authPrompt = document.createElement('div');
        authPrompt.classList.add('modal', 'fade');
        authPrompt.id = 'authModal';
        authPrompt.tabIndex = '-1';
        authPrompt.setAttribute('aria-labelledby', 'authModalLabel');
        authPrompt.setAttribute('aria-hidden', 'true');
        authPrompt.innerHTML = `
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content post-card">
                    <div class="modal-header">
                        <h5 class="modal-title" id="authModalLabel">
                            <i class="bi bi-info-circle me-2"></i> Authentication Required
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>You must be logged in to perform this action.</p>
                        <div class="d-flex justify-content-center gap-2">
                            <a href="/login" class="btn btn-primary">Login</a>
                            <a href="/register" class="btn btn-outline-primary">Sign Up</a>
                        </div>
                    </div>
                </div>
            </div>
        `;
        document.body.appendChild(authPrompt);
        const modal = new bootstrap.Modal(document.getElementById('authModal'));
        modal.show();
    }
</script>
